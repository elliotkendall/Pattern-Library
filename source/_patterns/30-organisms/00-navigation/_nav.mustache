<nav role="navigation" class="nav {{styleModifier}}">

  <label for="{{id}}" class="nav-toggle fa-bars">Navigation</label>
  <input type="checkbox" id="{{id}}" class="nav-input">
  
  <ul class="nav-menu">
    {{#items}}
    <li class="nav-menu-item 
               {{#active}}active{{/active}} 
               {{#section}}section{{/section}}{{^section}}subsection{{/section}}
               {{^section}}{{#submenu}}has-submenu{{/submenu}}{{/section}}">
      <a href="{{url}}" title="{{title}}">{{label}}</a>
      {{#submenu}}
      <ul class="nav-submenu">
        {{#items}}
        <li class="nav-submenu-item {{#active}}active{{/active}}">
          <a href="{{url}}" title="{{title}}">{{label}}</a>
        </li>
        {{/items}}
      </ul>
      {{/submenu}}
    </li>
    {{/items}}
  </ul>

</nav>