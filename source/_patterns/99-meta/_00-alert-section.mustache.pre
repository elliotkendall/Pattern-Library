<section class="sg-alerts">

  [[#EACH alerts ]]
  <div class="sg-alert alert [[alerts.type ??]]" 
       data-start="[[alerts.start ??]]"
       data-duration="[[alerts.duration ??]]"
       data-end="[[alerts.end ??]]"
       style="display: none;">
  
    <h1>[[alerts.heading]]</h1>
    
    [[alerts.message]]
    
  </div>
  [[/EACH alerts]]
  
</section>