{{assign 'noscript' true}}
{{#unless (eq noscript true)}}
  <eul-tab inline-template :defaults="{
                              isDisabled: {{default disabled false}},
                              isActive: {{default active false}},
                              isHover: {{default hover false}},
                              isFocus: {{default focus false}}
                            }">

    <button @click="activate"
            @keypress.enter="click"
            @focus.native="isFocus = true"
            @blur.native="isFocus = false"
            @mouseover.native="isHover = true"
            @mouseleave.native="isHover = false"
            class="tab"
            :class="{
              'is-disabled': isDisabled,
              'is-active': isActive,
              'is-hover': isHover,
              'is-focus': isFocus
            }"
            :disabled="isDisabled">
      {{label}}
    </button>

  </eul-tab>
{{/unless}}

{{#unless (eq noscript true)}}<noscript>{{/unless}}

  {{assign 'id' (combine 'tab--' (dashcase (lowercase label)))}}

  <input type="radio" class="tab-switch" id="{{id}}" name="{{default group 'tab'}}"{{#if active}} selected{{/if}}>

  <label class="tab" for="{{id}}">{{label}}</label>

{{#unless (eq noscript true)}}</noscript>{{/unless}}
