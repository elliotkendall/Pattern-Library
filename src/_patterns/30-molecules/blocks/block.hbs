<div class="block{{#if overhang}} -overhang-{{overhang}}{{/if}}{{#if stretch}} -stretch-{{stretch}}{{/if}}{{#if shadow}} -shadow-{{shadow}}{{/if}}{{#if theme}} -{{theme}}{{/if}}{{#if flipped}} -flipped{{/if}}">
  <div class="block-content">
    {{> tokens-heading level=4 heading=heading classes="block-heading"}}
    <p class="block-text">{{#if markdown}}{{{markdown text}}}{{else}}{{text}}{{/if}}</p>
    <div class="block-action button-group">
      {{#each buttons}}{{> atoms-button-link}}{{/each}}
    </div>
  </div>
  <div class="block-image">
    {{> atoms-image src=image decorative=true}}
  </div>
</div>
