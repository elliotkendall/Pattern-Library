<div class="popular-links-menu{{#if hours}} -hours{{/if}}">
  <h4 class="heading popular-links-menu-title">{{title}}</h4>
  <ul class="popular-links-menu-list">
    {{#each items}}
    <li class="popular-links-menu-list-item">
      {{#if link}}
        {{#unless ../hours}}
          {{assign 'classes' '-popular'}}
        {{else}}
          {{assign 'classes' ''}}
        {{/unless}}
        {{> atoms-link label=title href=link.href}}
      {{else}}
        {{title}}
      {{/if}}
    </li>
    {{/each}}
  </ul>
</div>
