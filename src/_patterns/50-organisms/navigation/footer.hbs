{{#with footer}}
{{assign 'noscript' (default noscript ../noscript false)}}
<footer class="footer{{#if ../classes}} {{../classes}}{{/if}}">

  {{#with navigation noscript=noscript}}{{> molecules-branding-footer classes='footer-branding' logo=../logo}}{{/with}}

  {{#each (limit navigation.lists 4) as |list|}}
    <ul class="footer-list">
      {{#each list}}
        <li>{{> atoms-link classes='' icon=false}}</li>
      {{/each}}
    </ul>
  {{/each}}

  {{> atoms-rule style='light' classes='footer-divider'}}

  {{#with navigation noscript=noscript}}{{> molecules-social-media classes='footer-socials'}}{{/with}}

  {{#with copyright noscript=noscript}}{{> atoms-copyright classes='footer-copyright'}}{{/with}}

</footer>
{{/with}}
